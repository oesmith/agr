<h1>Listing Feeds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><% if feed.name %><%= feed.name %><% else %><%= feed.url %><% end %></td>
        <td><%= link_to 'Show', feed, class: :button %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed), class: :button %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' }, class: :button %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path, class: :button %>
